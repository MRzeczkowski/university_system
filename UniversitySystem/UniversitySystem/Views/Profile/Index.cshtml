@model UserProfilesPageViewModel

<h2>User Profiles</h2>

<h3>Users Without Profile</h3>
<table>
    <tbody>
    @foreach (var user in Model.NoProfileUsers)
    {
        <tr>
            <td>@user.Name</td>
            <td>@user.Surname</td>
            <td>@user.Email</td>
            <td>
                <a asp-action="RegisterProfessor" asp-route-userId="@user.UserId" class="btn btn-sm">Set up as Professor</a>
            </td>
        </tr>
    }
    </tbody>
</table>

