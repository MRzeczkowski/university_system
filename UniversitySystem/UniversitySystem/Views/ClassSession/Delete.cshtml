@model UniversitySystem.Models.ClassSessionViewModel

@{
    ViewData["Title"] = "Delete Class Session";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this session?</h3>
<div>
    <h4>Class Session</h4>
    <hr/>
    <dl class="dl-horizontal">
        <dt>Course Offering</dt>
        <dd>@Model.OfferingId</dd>

        <dt>Session Start</dt>
        <dd>@Model.SessionStart</dd>

        <dt>Session End</dt>
        <dd>@Model.SessionEnd</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id"/>
        <button type="submit" value="Delete" class="btn btn-danger">Delete</button>
    </form>
</div>

<a asp-action="Index">Back to List</a>