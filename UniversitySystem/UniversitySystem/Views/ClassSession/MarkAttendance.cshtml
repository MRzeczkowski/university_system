@model AttendancesViewModel

<h2>Mark Attendance</h2>

<form asp-action="MarkAttendance" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="ClassSessionId" />

    <table class="table">
        <thead>
        <tr>
            <th>Student Name</th>
            <th>Attendance Status</th>
        </tr>
        </thead>
        <tbody>
        @for (var i = 0; i < Model.Attendances.Count; i++)
        {
            <tr>
                <td>
                    @Html.HiddenFor(m => m.Attendances[i].AttendanceId)
                    @Html.DisplayFor(m => m.Attendances[i].StudentName)
                </td>
                <td>
                    <select asp-for="@Model.Attendances[i].StatusId" asp-items="Model.StatusOptions" class="form-control"></select>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Save Attendance</button>
</form>