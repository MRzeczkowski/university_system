@model EnrollmentViewModel

@{
    ViewData["Title"] = "Enroll in a Course";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="OfferingId">Select Course Offering</label>
        <select asp-for="OfferingId" asp-items="@Model.CourseOfferingOptions" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="EnrollmentDate">Enrollment Date</label>
        <input asp-for="EnrollmentDate" type="date" class="form-control"/>
    </div>
    <button type="submit" class="btn btn-success">Enroll</button>
</form>