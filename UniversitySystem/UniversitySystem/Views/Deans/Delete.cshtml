@model DeanViewModel

@{
    ViewData["Title"] = "Delete Dean";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this dean?</h3>
<div>
    <h4>Dean</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Department
        </dt>
        <dd class="col-sm-10">
            @Model.DepartmentName
        </dd>
        <dt class="col-sm-2">
            Professor
        </dt>
        <dd class="col-sm-10">
            @Model.ProfessorName
        </dd>
        <dt class="col-sm-2">
            Effective Date
        </dt>
        <dd class="col-sm-10">
            @Model.EffectiveDate
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="DepartmentId" />
        <input type="hidden" asp-for="ProfessorId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </form>
</div>