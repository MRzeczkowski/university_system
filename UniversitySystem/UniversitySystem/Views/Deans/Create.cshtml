@model DeanViewModel

@{
    ViewData["Title"] = "Register Dean";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="DepartmentId">Department</label>
        <select asp-for="DepartmentId" class="form-control" asp-items="@Model.DepartmentOptions"></select>
    </div>
    <div class="form-group">
        <label asp-for="ProfessorId">Professor</label>
        <select asp-for="ProfessorId" class="form-control" asp-items="@Model.ProfessorOptions"></select>
    </div>
    <div class="form-group">
        <label asp-for="EffectiveDate">Effective Date</label>
        <input asp-for="EffectiveDate" class="form-control" type="date" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>