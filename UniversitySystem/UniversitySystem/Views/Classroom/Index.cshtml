@model IEnumerable<ClassroomViewModel>

@{
    ViewData["Title"] = "Classrooms";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>Building</th>
        <th>Room Number</th>
        <th>Capacity</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Building)</td>
            <td>@Html.DisplayFor(modelItem => item.RoomNumber)</td>
            <td>@Html.DisplayFor(modelItem => item.Capacity)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
            </td>
        </tr>
    }
    </tbody>
</table>