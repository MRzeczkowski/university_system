@model CourseOfferingViewModel

<h2>Edit Course Offering</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label asp-for="CourseId">Course</label>
        <select asp-for="CourseId" asp-items="Model.CourseOptions" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="SemesterId">Semester</label>
        <select asp-for="SemesterId" asp-items="Model.SemesterOptions" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Year">Year</label>
        <input asp-for="Year" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="ProfessorId">Professor</label>
        <select asp-for="ProfessorId" asp-items="Model.ProfessorOptions" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-success">Update</button>
</form>