@model UserRegistrationViewModel

@{
    ViewData["Title"] = "Complete User Profile";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditProfile" method="post">
    <input asp-for="UserId" type="hidden"/>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" disabled/>
    </div>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" type="date" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="GenderId"></label>
        <select asp-for="GenderId" class="form-control" asp-items="@Model.GenderOptions"></select>
    </div>
    <!-- Address fields -->
    <div class="form-group">
        <label asp-for="Address.Country"></label>
        <input asp-for="Address.Country" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Address.City"></label>
        <input asp-for="Address.City" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Address.PostalCode"></label>
        <input asp-for="Address.PostalCode" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Address.Street"></label>
        <input asp-for="Address.Street" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Address.HouseNumber"></label>
        <input asp-for="Address.HouseNumber" type="number" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Address.FlatNumber"></label>
        <input asp-for="Address.FlatNumber" type="number" class="form-control"/>
    </div>
    <!-- Submit button -->
    <br/>
    <button type="submit" class="btn btn-primary">Update</button>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}